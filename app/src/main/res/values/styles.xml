<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.BaseApp</item>
    </style>

    <!--General text style-->
    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Text.TextExtraBold" parent="Text">
        <item name="android:fontFamily">@font/inter_extrabold</item>
    </style>

    <style name="Text.TextBold" parent="Text">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="Text.TextRegular" parent="Text">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Text.TextSemiBold" parent="Text">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
    <!--General text style-->

    <!--Regular text style-->
    <style name="TextStyle.Regular.10dp" parent="Text.TextRegular">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextStyle.Regular.12dp" parent="Text.TextRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Regular.14dp" parent="Text.TextRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Regular.18dp" parent="Text.TextRegular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Regular.20dp" parent="Text.TextRegular">
        <item name="android:textSize">20sp</item>
    </style>
    <!--Regular text style-->

    <!--SemiBold text style-->
