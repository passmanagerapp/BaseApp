    <style name="TextStyle.SemiBold.14dp" parent="Text.TextSemiBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.SemiBold.18dp" parent="Text.TextSemiBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.SemiBold.20dp" parent="Text.TextSemiBold">
        <item name="android:textSize">20sp</item>
    </style>
    <!--SemiBold text style-->


    <!--Bold text style-->
    <style name="TextStyle.Bold.10dp" parent="Text.TextBold">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextStyle.Bold.12dp" parent="Text.TextBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Bold.14dp" parent="Text.TextBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Bold.18dp" parent="Text.TextBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Bold.20dp" parent="Text.TextBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Bold.24dp" parent="Text.TextBold">
